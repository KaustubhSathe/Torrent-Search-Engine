<table id="myTable" class="table table-striped table-bordered" style="width:100%;">
    <thead>
        <tr>
            <th>Source</th>
            <th>Name</th>
            <th>Size</th>
            <th>Seeders</th>
            <th>Leechers</th>
            <th>Upload Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each torrents}}
            <tr>
                <td>{{this.Source}}</td>
                <td><a href={{this.Link}}>{{this.Name}}</a></td>
                <td>{{this.Size}}</td>
                <td>{{this.Seeders}}</td>
                <td>{{this.Leechers}}</td>
                <td>{{this.UploadDate}}</td>
            </tr>
        {{/each}}
    </tbody>
</table> 